---
import Card from '../Card.astro'
import { LINKS } from '../../lib/constants'
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-1">
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="text-xl font-bold font-[GalSILB]">
        WANT TO GET IN <span class="text-3xl"><br />TOUCH?</span>
      </h1>
    </header>
    <div class="mt-4 flex w-fit flex-col font-[OldNewspaperTypes]">
      <ul>
        <li>
          <a href={LINKS.linkedin} target="_blank" class="flex items-center">
            <img src="/hand.png" alt="Retro Hand Icon" class="mr-3 h-4" />
            Linkedin
          </a>
        </li>
        <li>
          <a href={LINKS.calendly} target="_blank" class="flex items-center">
            <img src="/hand.png" alt="Retro Hand Icon" class="mr-3 h-4" />
            Calendly (15Min Call)
          </a>
        </li>
        <li>
          <a href={LINKS.matrix} target="_blank" class="flex items-center">
            <img src="/hand.png" alt="Retro Hand Icon" class="mr-3 h-4" />
            Matrix/Element
          </a>
        </li>
        <li>
          <a href={LINKS.mail} target="_blank" class="flex items-center">
            <img src="/hand.png" alt="Retro Hand Icon" class="mr-3 h-4" />
            Email (Personal)
          </a>
        </li>
      </ul>
    </div>
  </div>
</Card>
